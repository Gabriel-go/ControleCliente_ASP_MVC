@model ControleCliente_ASP_MVC.Models.Contato

@{
    ViewData["Title"] = "Confirma Apagar Contato";
}
<div class="text-center">
    <h3 class="display-4">Realmente deseja apagar o contato: @Model.Nome ?</h3>
    <div >
       
    
     <form asp-action="Deletar" class="d-grid gap-2 mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar" class="btn btn-success" />         
        <a class="btn btn-danger " asp-controller="Contato" asp-action="Index">Voltar</a>
    </form>
    </div>

</div>